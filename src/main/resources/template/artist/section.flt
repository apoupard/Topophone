<#import "/container/widgets.flt" as container>
<#import "/widget/headband.flt" as top>
<div id="top">
  <@top.headband main=artist.headband.main logo=artist.headband.logo />
</div>
<div id="page" class="artist">
	<div class="side column-left">
	  <@container.widgets>
		  <@container.widget opacity=true gradient=true class="first height-7 medium-img">
		      <#include "/artist/profile.flt">
		  </@container.widget>
		   <@container.widget opacity=true gradient=false class="height-1">
            <#include "/artist/audio.flt">
        </@container.widget>
      </@container.widgets>
	</div>
   <div class="column-center">
      <@container.widgets>
        <@container.widget opacity=true gradient=true>
          ${artist.description}
        </@container.widget>
      </@container.widgets>
   </div>
	<div class="side column-right">
      <@container.widgets>
        <@container.widget opacity=true onlyBorder=true class="first">
            <#include "/artist/concert.flt">          
        </@container.widget>
         <@container.widget opacity=true gradient=false class="height-1">
            <#include "/artist/contact.flt">
        </@container.widget>
      </@container.widgets>
	</div>
</div>
<div id="bottom" class="artist">
  <@container.widgets>
      <@container.widget opacity=false gradient=false>
        <#include "/artist/videos.flt">
      </@container.widget>
    </@container.widgets>
</div>
