<#macro image href credit="Test" alt="" class="" onclick=""  external=false>
<div class="image hasCredit ${class}">
	<#if external> 
    	<img alt="${alt}" src="${href}" onclick="${onclick}"></img>
    <#else>
    	<img alt="${alt}" src="${appcontext}${href}" onclick="${onclick}"></img>
    	<div class="credit hidden">Cr√©dit: ${credit}</div>
    </#if>
</div>
</#macro>
