<#macro widgets>
  <div class="widgets">
    <#nested/>
  </div>
</#macro>

<#macro widget opacity=false opacityClass="opacity-wrap" onlyBorder=false class="">
<div class="widget ${class}">
  <#if opacity> 
    <div class="opacity ${opacityClass}"></div>
  </#if>
  <div class="widget-content">
    <#nested/>
  </div>
</div>
</#macro>